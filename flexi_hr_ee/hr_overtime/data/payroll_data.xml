<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="0">

		<record id="hr_employee_overtime_salary_rule" model="hr.salary.rule">
			<field name="name">Employee Overtime Salary Rule</field>
			<field name="sequence" eval="1" />
			<field name="code">OVERTIME-ADD</field>
			<field name="category_id" ref="hr_payroll.BASIC" />
			<field name="condition_select">none</field>
			<field name="amount_select">code</field>
			<field name="amount_python_compute">result = 0.0
if payslip.employee_overtime_ids:
	for each in payslip.employee_overtime_ids:
		amt = (each.ot_rate*each.overtime)
		result += (amt)
else:
	result = 0.0
			</field>
			<field name="register_id"
				ref="hr_payroll.contrib_register_employees" />
		</record>

	</data>
</odoo>